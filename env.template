# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Server Ports (optional, defaults shown)
ASSETS_SERVER_PORT=3000
ASSETS_WEB_PORT=4000

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-jwt-secret-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_SECRET=your-google-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Configuration
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password

# Frontend URLs
ASSETS_FRONTEND_URL=https://chartfolio.me
ASSETS_AUTH_URL=https://chartfolio.me

# Tinkoff API
TINKOFF_TOKEN=your-tinkoff-token

# Proxy Configuration
PROXY_IP=your-proxy-ip
PROXY_PORT=your-proxy-port
PROXY_USERNAME=your-proxy-username
PROXY_PASS=your-proxy-password
PROXY2_URL=http://username:password@proxy.example.com:port

# Currency API
CURRENCY_TOKEN=your-currency-token
CURRENCY_TOKEN_RESERVE=your-currency-token-reserve

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Asset Limits
ASSETS_LIMIT_FREE=20
ASSETS_LIMIT_PRO=1000
CATEGORIES_LIMIT_FREE=10
CATEGORIES_LIMIT_PRO=50
